# TRVL Social v3 - Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# ==============================================
# MONITORING & ANALYTICS CONFIGURATION
# ==============================================

# Sentry Error Tracking & Performance Monitoring
VITE_SENTRY_DSN=YOUR_SENTRY_DSN_HERE
VITE_SENTRY_ENVIRONMENT=production
VITE_APP_VERSION=3.0.0
VITE_BUILD_NUMBER=1

# Google Analytics 4
VITE_GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# Mixpanel Analytics
VITE_MIXPANEL_TOKEN=YOUR_MIXPANEL_TOKEN_HERE

# Datadog Real User Monitoring
VITE_DATADOG_APPLICATION_ID=YOUR_DATADOG_APP_ID_HERE
VITE_DATADOG_CLIENT_TOKEN=YOUR_DATADOG_CLIENT_TOKEN_HERE
VITE_DATADOG_SITE=datadoghq.com
VITE_DATADOG_SERVICE=trvl-social-v3
VITE_DATADOG_VERSION=3.0.0

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================

# Supabase Configuration
VITE_SUPABASE_URL=YOUR_SUPABASE_URL_HERE
VITE_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY_HERE

# Stripe Payment Processing
VITE_STRIPE_PUBLISHABLE_KEY=YOUR_STRIPE_PUBLISHABLE_KEY_HERE

# Mapbox for Maps Integration
VITE_MAPBOX_ACCESS_TOKEN=YOUR_MAPBOX_TOKEN_HERE

# ==============================================
# THIRD-PARTY SERVICES
# ==============================================

# OpenAI for ML Features
VITE_OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE

# ==============================================
# MONITORING THRESHOLDS (OPTIONAL)
# ==============================================

# Core Web Vitals Thresholds (in milliseconds)
VITE_LCP_WARNING_THRESHOLD=2500
VITE_LCP_CRITICAL_THRESHOLD=4000
VITE_FID_WARNING_THRESHOLD=100
VITE_FID_CRITICAL_THRESHOLD=300
VITE_CLS_WARNING_THRESHOLD=0.1
VITE_CLS_CRITICAL_THRESHOLD=0.25

# Performance Thresholds
VITE_RESPONSE_TIME_WARNING=500
VITE_RESPONSE_TIME_CRITICAL=1000
VITE_ERROR_RATE_WARNING=1
VITE_ERROR_RATE_CRITICAL=5

# Business Metrics Thresholds
VITE_CONVERSION_RATE_WARNING=2
VITE_CONVERSION_RATE_CRITICAL=1
VITE_BOUNCE_RATE_WARNING=70
VITE_BOUNCE_RATE_CRITICAL=80

# ==============================================
# NOTIFICATION CONFIGURATION (OPTIONAL)
# ==============================================

# Slack Webhook for Critical Alerts
VITE_SLACK_WEBHOOK_URL=YOUR_SLACK_WEBHOOK_URL_HERE

# Email Notifications
VITE_ALERT_EMAIL=alerts@yourdomain.com

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================

# Enable debug mode in development
VITE_DEBUG_MODE=true

# Enable verbose logging in development
VITE_VERBOSE_LOGGING=true

# Disable certain features in development
VITE_DISABLE_ANALYTICS_IN_DEV=false