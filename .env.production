# =================================================================
# PRODUCTION INFRASTRUCTURE SETTINGS
# =================================================================

# Environment Identification
VITE_NODE_ENV="production"

# Logging Configuration
LOG_LEVEL="info"
LOG_FORMAT="json"
LOG_DESTINATION="file"
LOG_MAX_SIZE="100mb"
LOG_MAX_FILES="10"

# Security Settings
SECURE_COOKIES="true"
HTTPS_ONLY="true"
HSTS_MAX_AGE="31536000"
CSRF_SECRET="your_csrf_secret_here"
SESSION_SECRET="your_session_secret_here"

# Rate Limiting Configuration
RATE_LIMIT_WINDOW="900000"  # 15 minutes in ms
RATE_LIMIT_MAX="100"        # Max requests per window
RATE_LIMIT_AUTH_WINDOW="300000"  # 5 minutes for auth endpoints
RATE_LIMIT_AUTH_MAX="5"     # Max auth attempts per window
RATE_LIMIT_PAYMENT_WINDOW="3600000"  # 1 hour for payment endpoints
RATE_LIMIT_PAYMENT_MAX="10" # Max payment attempts per hour

# Cache Configuration
CACHE_TTL="3600"            # Cache TTL in seconds (1 hour)
CDN_CACHE_TTL="86400"       # CDN cache TTL in seconds (24 hours)
STATIC_CACHE_TTL="604800"   # Static assets cache TTL (7 days)

# Database Configuration
DATABASE_POOL_SIZE="20"
DATABASE_TIMEOUT="30000"
DATABASE_IDLE_TIMEOUT="300000"
DATABASE_STATEMENT_TIMEOUT="60000"

# Performance Settings
MAX_PAYLOAD_SIZE="10mb"
REQUEST_TIMEOUT="30000"
KEEP_ALIVE_TIMEOUT="5000"
COMPRESSION_LEVEL="6"

# Feature Flags
ENABLE_ANALYTICS="true"
ENABLE_ERROR_TRACKING="true"
ENABLE_PERFORMANCE_MONITORING="true"
ENABLE_RATE_LIMITING="true"
ENABLE_AUDIT_LOGGING="true"
ENABLE_CDN="true"
ENABLE_COMPRESSION="true"

# CDN Configuration
CDN_BASE_URL="https://cdn.trvlsocial.com"
CDN_ASSETS_PATH="/static"
CDN_IMAGES_PATH="/images"

# Health Check Configuration
HEALTH_CHECK_INTERVAL="30000"  # 30 seconds
HEALTH_CHECK_TIMEOUT="5000"    # 5 seconds
HEALTH_CHECK_RETRIES="3"

# Backup Configuration
BACKUP_ENABLED="true"
BACKUP_INTERVAL="86400000"     # 24 hours
BACKUP_RETENTION_DAYS="30"

# Alert Configuration
ALERT_EMAIL="alerts@trvlsocial.com"
CRITICAL_ERROR_THRESHOLD="5"   # Number of critical errors before alert
RESPONSE_TIME_THRESHOLD="2000" # Response time threshold in ms
ERROR_RATE_THRESHOLD="0.05"    # 5% error rate threshold